{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es7", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
